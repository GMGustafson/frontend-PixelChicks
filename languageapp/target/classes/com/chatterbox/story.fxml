<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="383.0" prefWidth="242.0" spacing="20.0" stylesheets="@../../../../../target/classes/com/chatterbox/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.StoryController">
    <children>
      <Pane prefHeight="317.0" prefWidth="202.0">
         <children>
            <Button fx:id="back" layoutX="-15.0" layoutY="-24.0" mnemonicParsing="false" onAction="#backtoActivites" text="Back" />
              <!-- Story Title -->
              <Label fx:id="storyTitle" layoutX="61.0" layoutY="37.0" text="Story Title" textAlignment="CENTER" wrapText="true">
                  <font>
                      <Font size="18.0" />
                  </font>
              </Label>
      
                    <!-- English Translation -->
              <Label fx:id="englishText" layoutX="11.0" layoutY="74.0" prefHeight="69.0" prefWidth="183.0" text="English Translation:" textAlignment="CENTER" wrapText="true">
                  <font>
                      <Font size="10.0" />
                  </font>
              </Label>
            <Label fx:id="SpanishText" layoutX="14.0" layoutY="139.0" prefHeight="117.0" prefWidth="187.0" text="Text" wrapText="true">
               <font>
                  <Font size="10.0" />
               </font></Label>
      
                    <!-- Read Aloud Button -->
              <Button fx:id="readStoryButton" layoutX="31.0" layoutY="298.0" onAction="#readStoryAloud" text="Read Aloud" />
            <Button fx:id="translate" layoutX="73.0" layoutY="265.0" mnemonicParsing="false" onAction="#Translate" prefHeight="16.0" prefWidth="54.0" text="Translate">
               <font>
                  <Font size="10.0" />
               </font>
            </Button>
         </children>
      </Pane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
